<div class="col-md-7">
  <div>
    <ul class="nav nav-tabs">
      <h2><%= @user.name %></h2>
      <li role="presentation"><%= link_to '我建立的活動', user_path(@user) %></li>
      <li role="presentation"><%= link_to '參與討論的活動', comments_user_path(@user) %></li>
      <li role="presentation"><%= link_to '喜歡的活動' %></li>
      <li role="presentation" class="active"><%= link_to '追蹤的人', followings_user_path(@user)  %></li>
    </ul>
  </div>
  <%= render partial: 'shared/user_profile', locals: { user: @user } %>
</div>
<div class="col-md-5 text-center">
  <br>
  <h3><%= @user.name %> 追蹤了</h3>
  <% @followings.each do |user| %>
    <h3><%= link_to user.name, user_path(user) %></h3>
    <% if user.avatar? %>
      <%= image_tag user.avatar.url(:thumb) %>
    <% else %>
      <img src="https://api.fnkr.net/testimg/100x100/00CED1/FFF/?text=img+placeholder">
    <% end %>
  <% end %>
</div>