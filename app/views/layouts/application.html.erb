<!DOCTYPE html>
<html>
  <head>
    <title>Person</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-inverse">
      <div class="container">
      <%= link_to 'Person', root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to 'About Me', welcomes_about_me_path %></li>
            <li><%= link_to 'Setting', edit_user_registration_path %></li>
            <li><%= link_to '登出', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Join', new_user_registration_path %></li>
            <li><%= link_to '登入', user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>  

    <%= yield %>
  </body>
</html>
