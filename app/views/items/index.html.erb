<div class="col-md-8">
  <div>
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= link_to '活動列表', items_path %></li>
      <li role="presentation"><%= link_to '人物專欄', users_path %></li>
    </ul>
  </div>
  
  <% @items.each do |item| %>
    <div class="col-md-6">
      <h3>[ <%= item.genre.name %> ]</h3>
      <h3><%= link_to item.title, item_path(item)  %></h3>
      <p>時間： <%= item.date %> 地點：<%= item.location %></p>
      <p> 主辦人：<%= item.user.name %></p>
      <div class="button-group">
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Trash It', item_path(item), method: :delete, data: { confirm: 'Are you sure?'} %>
      </div>
      <hr>
    </div>
  <% end %>
  <div class="text-center">
    <%= paginate @items %>
  </div>
</div>

<div class="col-md-4">
  <div class="text-center">
    <h1> 選擇活動類型 </h1>
    <br>
    <ul class="nav nav-pills nav-stacked">
      <li role="presentation" class="active" ><%= link_to "全部活動", items_path %></li>
      <br>
      <% @genres.each do |genre| %>
      <li role="presentation"><%= link_to genre.name, genre_path(genre) %></li>
      <br>
      <% end %>
    </ul>
  </div>
</div>
