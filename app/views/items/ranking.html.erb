<div class="col-md-8">
  <div>
    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to '活動列表', items_path %></li>
      <li role="presentation"><%= link_to '人物專欄', users_path %></li>
      <li role="presentation" class= "active"><%= link_to '十大熱門', ranking_items_path %></li>
    </ul>
  </div>
  <h1>Top 10 熱門活動 <small>(按讚數最高)</small></h1>
  <% @items.each do |item| %>
    <div class="col-md-6">
      <h3>[ <%= item.genre.name %> ]</h3>
      <h3><%= link_to item.title, item_path(item) %></h3>
      <p>時間： <%= item.date %> 地點：<%= item.location %></p>
      <p> 主辦人：<%= item.user.name %></p>
      <%= render partial: "shared/like", locals: { item: item } %>
      <%= item.likes_count %>
      <hr>
    </div>
  <% end %>
</div>

